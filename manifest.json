{
    "manifest_version": 3,
    "name": "bad words!",
    "description": "reports how many bad words are on a webpage!",
    "version": "1.0",
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "images/icon.png"
    },
    "permissions": [
        "activeTab",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content-scripts/block.js"
            ],
            "css": [
                "content-scripts/block.css"
            ]
        }
    ]
}